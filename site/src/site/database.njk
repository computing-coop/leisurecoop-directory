<div data-component='filters'>
  <div className='f jcc aic mt1 pt1'>

    <button data-filter='woodworking' class='border'>
      <span>Woodworking</span>
    </button>
    <button data-filter='fishing' class='border'>
      <span>Fishing</span>
    </button>
    <button data-filter='ceramics' class='border'>
      <span>Ceramics</span>
    </button>
    <button data-filter='food-preservation' class='border'>
      <span>Food Preservation</span>
    </button>
    <button data-filter='photography' class='border'>
      <span>Photography</span>
    </button>
  </div>

  <div class='mt1 pt1 mb1 user__cols pb1 js-users'>
    <div class='hidden js-title' data-title='Goods'></div>
    {%- for user in humans -%}
      <div class='row al x mb1 {% for discipline in user.content.main.discipline  %}
        {{ discipline }}
      {% endfor %}'>
        {% if user.content.projects %}
          <a class='h3 caps' href='/users/{{ user.content.main.slug.current | slug }}/'>{{ user.content.main.name  }}</a>
        {% else %}
          <span class='h3 caps o5 inline' >{{ user.content.main.name  }}</span>
        {% endif %}
        {% if user.content.main.url %}<a class='external h3' rel='noopener' href='{{ user.content.main.url }}' target='_blank'>â¬€</a>{% endif %}
      </div>
    {%- endfor -%}
  </div>
</div>